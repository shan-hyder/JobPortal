@model JobPortalMVC.Models.Login
@{
    ViewBag.Title = "Page_Load";
}


<h2 class="text-danger text-center">Login</h2>
<div class="d-flex flex-coloum "style="width:75%;height:40%">
    @using (Html.BeginForm("Login_Click", "Login",FormMethod.Post))
    {
    <div class="jumbotron">
        <div class="form-group">
            <label>
                Username :
            </label><br />
            @Html.TextBoxFor(m => m.username, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.username)
        </div>
        <div class="form-group">
            <label>
                Password :
            </label><br />
            @Html.PasswordFor(m => m.password,new {@class="form-control"})
            @Html.ValidationMessageFor(m => m.password)
        </div>
        <div class="form-group">
            <input type="submit" value="Login" />
            @Html.DisplayFor(m => m.message)

        </div>
    </div>

            }

</div>

